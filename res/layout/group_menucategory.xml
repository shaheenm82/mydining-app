<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_menuCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_accent"
        android:paddingLeft="@dimen/list_collapsableIndent0"
        android:text="Category"
        android:textColor="@color/red_base"
        android:textSize="@dimen/Heading1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_menuCategoryDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige_background_light"
        android:paddingLeft="@dimen/list_collapsableIndent2"
        android:text="Description"
        android:textColor="@color/pink_accent"
        android:textSize="@dimen/Heading3" />

    <TextView
        android:id="@+id/text_menuCategoryAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige_background_light"
        android:paddingLeft="@dimen/list_collapsableIndent4"
        android:text="Additional"
        android:textColor="@color/pink_accent"
        android:textSize="@dimen/Heading4"
        android:textStyle="bold|italic" />

</LinearLayout>
