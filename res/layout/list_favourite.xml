<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/list_menuitem"
    android:background="@color/slate_menu20"
    android:columnCount="5"
    android:orientation="horizontal"
    android:padding="@dimen/list_gridpadding" >

    <Space android:layout_gravity="fill_vertical" />

    <TextView
        android:id="@+id/text_fav_rest"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:background="@color/orange_menu20"
        android:text="Dish"
        android:textColor="@color/aqua_menu"
        android:textSize="@dimen/Heading1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_fav_selected"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="0"
        android:gravity="right"
        android:text="selected x times"
        android:textColor="@color/red_menu80"
        android:textSize="@dimen/Heading4" />

    <TextView
        android:id="@+id/text_fav_last"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:background="@color/orange_menu20"
        android:text="last selected"
        android:textColor="@color/green_menu"
        android:textSize="@dimen/Heading3"
        android:textStyle="bold" />

    <Space android:layout_gravity="fill_horizontal" />

    <Space
        android:layout_column="4"
        android:layout_gravity="fill_vertical"
        android:layout_row="1" />

</GridLayout>